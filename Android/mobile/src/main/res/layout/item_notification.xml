<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical">

	<TextView
		android:id="@+id/titleText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/item_preview_country"
		android:textSize="18sp"
		android:textColor="@color/countryName"
		android:gravity="left"/>

	<TextView
		android:id="@+id/contentText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:gravity="left"
		android:textColor="@color/countryName"
		android:text="@string/item_preview_dialCode" />

	<TextView
		android:id="@+id/updatedAtText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:gravity="right"
		android:textColor="@color/countryName"
		android:text="@string/item_preview_dialCode" />

	<TextView
		android:id="@+id/seperatorText"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_toRightOf="@+id/flagImg"
		android:layout_alignParentBottom="true"
		android:background="@color/colorMain"/>
</LinearLayout>