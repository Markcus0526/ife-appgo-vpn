<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorMain">

		<ImageButton
			android:id="@+id/backBtn"
			android:layout_width="50dp"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:cropToPadding="true"
			android:src="@drawable/signup_backbtn"
			android:tint="@color/colorWhite"
			android:tintMode="src_atop"
			android:padding="0dp"
			android:background="@color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_menu_language"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/saveBtn"
            android:text="@string/me_language_save"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@color/transparent"
            android:padding="0dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menuGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/menuGroup1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/shareIconImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_flag_us"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shareIconImg"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:text="@string/me_language_english"
                android:textColor="@color/colorMain"
                android:textSize="16sp" />

			<ImageView
				android:id="@+id/englishSelImg"
				android:layout_width="15dp"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:src="@drawable/list_selected" />

            <Button
                android:id="@+id/englishBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_item_button" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSeperator"
            android:layout_marginLeft="45dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/rateIconImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_flag_cn"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rateIconImg"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:text="@string/me_language_chinese"
                android:textColor="@color/colorMain"
                android:textSize="16sp" />

			<ImageView
				android:id="@+id/chineseSelImg"
				android:layout_width="15dp"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:src="@drawable/list_selected" />

            <Button
                android:id="@+id/chineseBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_item_button" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSeperator"
            android:layout_marginLeft="45dp"/>

    </LinearLayout>
</LinearLayout>
